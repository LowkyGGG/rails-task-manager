<h1 class="text-center"><%= @task.title %></h1>

<div class="d-flex justify-content-center">
  <div class="details shadow-sm p-4 mb-3 bg-light rounded d-inline-block">
    <p class="m-0"><%= @task.details %></p>
  </div>
</div>

<div>
  <div class="text-center">
    <% if @task.completed %>
      <p class="text-success"><i class="fa-regular fa-square-check"></i> Completed</p>
    <% else %>
      <p class="text-secondary"><i class="fa-regular fa-square"></i> Not completed</p>
    <% end %>
  </div>

</div>
<div class="d-flex justify-content-center pb-3">
  <%= link_to "Edit", edit_task_path(@task), class: "btn btn-primary" %>
</div>

<div class="d-flex justify-content-center">
  <%= link_to "Back to list", tasks_path, class: "btn btn-primary" %>
</div>
