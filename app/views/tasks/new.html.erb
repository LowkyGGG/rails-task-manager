<h1 class="text-center">New task</h1>
<%= form_with model: @task do |f| %>
  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6">
        <div class="mb-3">
          <%= f.label :title, class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :details, class: "form-label" %>
          <%= f.text_field :details, class: "form-control" %>
        </div>

        <div class="mb-3 form-check">
          <%= f.check_box :completed, class: "form-check-input" %>
          <%= f.label :completed, class: "form-check-label" %>
        </div>

        <div class="d-grid">
          <%= f.submit class: "btn btn-primary", data: { turbo: false } %>
        </div>
      </div>
    </div>
  </div>
<% end %>
