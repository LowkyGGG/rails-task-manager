<h1 class="text-center">Tasks</h1>
<div class="d-flex flex-column align-items-center">
  <% @tasks.each do |task| %>
    <div class="d-flex align-items-center">
      <% if task.completed %>
        <i class="fa-regular fa-square-check me-2"></i>
      <% else %>
        <i class="fa-regular fa-square me-2"></i>
      <% end %>
        <%= link_to task.title, task_path(task), class: "text-decoration-none text-body me-2" %>
        <%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: "Delete #{task.title}?" } do %>
          <i class="fa-solid fa-trash-can text-danger"></i>
        <% end %>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center pt-3">
  <%= link_to "New task", new_task_path, class: "btn btn-primary" %>
</div>
